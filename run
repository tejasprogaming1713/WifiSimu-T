#!/bin/bash

echo -e "WISIU Auto-Installer\n"

# Check if wifi.sh exists
if [ ! -f "wifi.sh" ] && [ ! -f "wisiu.sh" ]; then
    echo "wifi.sh or wisiu.sh not found."
    echo "Downloading fresh copy..."
    git clone https://github.com/tejasprogaming1713/WifiSimu-T tempfolder
    cp tempfolder/*.sh .
    rm -rf tempfolder
fi

# Detect final script name
if [ -f "wisiu.sh" ]; then
    FILE="wisiu.sh"
elif [ -f "wifi.sh" ]; then
    FILE="wifi.sh"
else
    echo "Error: No script found even after download."
    exit 1
fi

chmod +x "$FILE"

echo ""
echo "=============================================="
echo "  Auto-Setup Complete!"
echo "  To run WISIU next time, simply type:"
echo ""
echo '      run wifi.sh'
echo "=============================================="
echo ""

./"$FILE"
